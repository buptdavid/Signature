body {
	margin-left: 0px;
	margin-top: 0px;
	margin-right: 0px;
	margin-bottom: 0px;
	background-color: #2cb0ee;
	overflow:hidden;
}

.login_bg{
	background:url(../images/login_bg091.jpg) no-repeat;
}

.login_text{
	font-size:14px;
	color:#FFF;
}

.login_tips_text{
	font-size:12px;
	color:#F00;
	font-weight:bold;
}

.login_input{
	color:#2cb0ee;
	height:25px;
	width:120px;
	background-color:#09425f;
}

.btn_login{
    padding:0px 0px 2px 0px;
	line-height:21px;
    text-align:center;
    border:none;
	width:74px;
	height:28px;
	color: #000;
	font-size: 12px;
	background:url(../images/login_btn091.png) no-repeat center;
	padding-top:1px;
}